<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/defaultWindowPadding"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_security"
        android:gravity="center"
        android:text="Введенный ключ шифрования будет использован только для этого диалога, если вы оставите поле пустым, то будет использован ключ из настроек приложения"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/defaultPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Switch
        android:layout_below="@+id/title_security"
        android:id="@+id/switch_security"
        android:layout_marginBottom="@dimen/defaultPadding"
        android:text="Вкл/выкл шифрование"
        android:textColor="@color/primary_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_security"
        android:layout_below="@+id/switch_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>